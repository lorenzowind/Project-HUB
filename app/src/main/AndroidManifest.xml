<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.lorenzowindmoller.projecthub">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".view.ui.Login"
            android:launchMode="singleTop" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name=".view.ui.CreateAccount"
            android:parentActivityName=".view.ui.Login" />

        <activity android:name=".view.ui.Home" />

        <activity android:name=".view.ui.Profile" />

        <activity android:name=".view.ui.CreateProject" />

        <activity android:name=".view.ui.Details" />

    </application>

</manifest>