<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6ECFF"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/button_back_create_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"

        app:srcCompat="@drawable/arrow_back_login" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="16dp"

        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"

            android:textColor="#404BAD"
            android:textSize="20sp"
            android:text="Create an Account" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="16dp"
            android:gravity="center"

            android:text="Create your account now to get access in the Project HUB"
            android:textColor="#404BAD"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="16dp"

        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="6dp"

            android:textColor="#404bad"
            android:textSize="16sp"
            android:text="Full name" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="#404BAD">

            <EditText
                android:id="@+id/input_name_create_account"
                android:layout_width="match_parent"
                android:layout_height="48dp"

                android:paddingLeft="18dp"
                android:layout_margin="1dp"

                android:background="#ffffff"
                android:inputType="textPersonName"

                android:textColor="#919cff"
                android:textSize="18sp"
                android:text="Lorenzo Windmoller Martins" />

        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="6dp"
            android:layout_marginTop="9dp"

            android:textColor="#404bad"
            android:textSize="16sp"
            android:text="Email" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="#404BAD">

            <EditText
                android:id="@+id/input_email_create_account"
                android:layout_width="match_parent"
                android:layout_height="48dp"

                android:paddingLeft="18dp"
                android:layout_margin="1dp"

                android:background="#ffffff"
                android:inputType="textEmailAddress"

                android:textColor="#919cff"
                android:textSize="18sp"
                android:text="lorenzomart01@gmail.com" />

        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="6dp"
            android:layout_marginTop="9dp"

            android:textColor="#404bad"
            android:textSize="16sp"
            android:text="Password" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="#404BAD">

            <EditText
                android:id="@+id/input_password_create_account"
                android:layout_width="match_parent"
                android:layout_height="48dp"

                android:paddingLeft="18dp"
                android:layout_margin="1dp"

                android:background="#ffffff"
                android:inputType="textPassword"

                android:textColor="#919cff"
                android:textSize="18sp"
                android:text="123456" />

        </FrameLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/button_continue_create_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp" >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="48dp"

            app:cardBackgroundColor="#404bad"
            app:cardCornerRadius="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_gravity="center"

                app:srcCompat="@drawable/arrow_go" />

        </android.support.v7.widget.CardView>

    </FrameLayout>

</LinearLayout>