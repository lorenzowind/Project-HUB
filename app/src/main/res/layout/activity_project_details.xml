<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#e6ecff"
    android:orientation="vertical" >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="#404bad"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/button_cancel_project_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerVertical="true"

            android:layout_gravity="center"
            android:layout_marginLeft="24dp"

            app:srcCompat="@drawable/cancel" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="16dp"

            android:layout_marginTop="25dp"
            android:text="D E T A I L S"
            android:textColor="#ffffff"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/button_confirm_project_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"

            android:layout_marginRight="24dp"

            app:srcCompat="@drawable/confirm" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="#e6ecff"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"

            android:layout_centerInParent="false"
            android:layout_centerVertical="true"

            android:background="#ffffff"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/project_image_details"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/project_image_big" />

            <ImageView
                android:id="@+id/edit_image_project_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_above="@id/textview_name_project_details"

                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/project_image_details"
                app:srcCompat="@drawable/edit_image" />

            <TextView
                android:id="@+id/textview_name_project_details"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_below="@id/project_image_details"
                android:layout_marginBottom="6dp"

                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="20dp"
                android:text="Name"
                android:textColor="#2699fb"
                android:textSize="16sp" />

            <FrameLayout
                android:id="@+id/input_name_project_details"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_below="@id/textview_name_project_details"

                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:background="#BCE0FD">

                <EditText
                    android:id="@+id/text_name_project_details"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"

                    android:layout_margin="1dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:background="#f1f9ff"

                    android:gravity="center_vertical"
                    android:inputType="textPersonName"
                    android:paddingLeft="6dp"

                    android:text="Projeto 1"
                    android:textColor="#2699fb"
                    android:textSize="18sp" />

            </FrameLayout>

            <TextView
                android:id="@+id/textview_type_project_details"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_below="@id/input_name_project_details"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="18dp"

                android:layout_marginRight="18dp"
                android:layout_marginTop="12dp"
                android:text="Type"
                android:textColor="#2699fb"
                android:textSize="16sp" />

            <FrameLayout
                android:id="@+id/input_type_project_details"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_below="@id/textview_type_project_details"

                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:background="#BCE0FD">

                <EditText
                    android:id="@+id/text_type_project_details"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"

                    android:layout_margin="1dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:background="#f1f9ff "
                    android:gravity="center_vertical"

                    android:inputType="text"
                    android:paddingLeft="6dp"

                    android:text="Organization"
                    android:textColor="#2699fb"
                    android:textSize="18sp" />

            </FrameLayout>

            <TextView
                android:id="@+id/textview_description_project_details"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_below="@id/input_type_project_details"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="18dp"

                android:layout_marginRight="18dp"
                android:layout_marginTop="12dp"
                android:text="Description"
                android:textColor="#2699fb"
                android:textSize="16sp" />

            <FrameLayout
                android:id="@+id/input_description_project_details"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_below="@id/textview_description_project_details"

                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:background="#BCE0FD">

                <EditText
                    android:id="@+id/text_description_project_details"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"

                    android:layout_margin="1dp"
                    android:background="#f1f9ff"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:paddingBottom="6dp"

                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="6dp"

                    android:text="A cool project."
                    android:textColor="#2699fb"
                    android:textSize="18sp" />

            </FrameLayout>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>